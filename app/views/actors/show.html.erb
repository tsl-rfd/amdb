<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @actor.name %>
</p>

<p>
  <b>Dob:</b>
  <%= @actor.dob %>
</p>

<p>
  <b>Roles</b>
  <ul>
  <% @actor.roles.each do |role| %>
    <li><%= role.name %> in <%= role.movie.title %>, directed by <%= role.movie.director.name %></li>
  <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_actor_path(@actor) %> |
<%= link_to 'Back', actors_path %>
